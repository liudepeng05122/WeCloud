<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_remote_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_45"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_common_30"
        android:layout_marginRight="@dimen/dimen_common_30"
        android:layout_marginTop="@dimen/dimen_common_20"
        android:text="@string/remote_control"
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/dimen_common_14" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_common_45"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_common_30"
        android:layout_marginRight="@dimen/dimen_common_30"
        android:layout_marginTop="@dimen/dimen_common_20"
        android:text="@string/message_title"
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/dimen_common_14" />
</LinearLayout>