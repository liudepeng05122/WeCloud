<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_common_10"
        android:layout_marginRight="@dimen/dimen_common_10"
        android:background="@drawable/progress_dialog_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_common_5">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_waiting"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_common_14" />
    </LinearLayout>

</RelativeLayout>